            <Border CornerRadius="10" Grid.Row="6" Grid.Column="3" Grid.RowSpan="3" Background="LightGray" />
            <Border CornerRadius="100" Grid.Row="6" Grid.Column="3" Background="Red" Margin="10,10,10,10" Visibility="{Binding IsRedForCarsVisible}" />
            <Border CornerRadius="100" Grid.Row="7" Grid.Column="3" Background="Yellow" Margin="10,10,10,10" Visibility="{Binding IsYellowForCarsVisible}"/>
            <Border CornerRadius="100" Grid.Row="8" Grid.Column="3" Background="Green" Margin="10,10,10,10" Visibility="{Binding IsGreenForCarsVisible}"/>


            <Border CornerRadius="10" Grid.Row="1" Grid.Column="5" Grid.RowSpan="3" Background="LightGray" />
            <Border CornerRadius="100" Grid.Row="3" Grid.Column="5" Background="Red" Margin="10,10,10,10" Visibility="{Binding IsRedForCarsVisible}"/>
            <Border CornerRadius="100" Grid.Row="2" Grid.Column="5" Background="Yellow" Margin="10,10,10,10" Visibility="{Binding IsYellowForCarsVisible}"/>
            <Border CornerRadius="100" Grid.Row="1" Grid.Column="5" Background="Green" Margin="10,10,10,10" Visibility="{Binding IsGreenForCarsVisible}"/>

            <Border CornerRadius="10" Grid.Row="5" Grid.Column="1" Grid.ColumnSpan="2" Background="LightGray" />
            <Border CornerRadius="100" Grid.Row="5" Grid.Column="2" Background="Red" Margin="10,10,10,10" Visibility="{Binding IsRedForPeopleVisible}"/>
            <Border CornerRadius="100" Grid.Row="5" Grid.Column="1" Background="Green" Margin="10,10,10,10" Visibility="{Binding IsGreenForPeopleVisible}"/>

            <Border CornerRadius="10" Grid.Row="4" Grid.Column="6" Grid.ColumnSpan="2" Background="LightGray" />
            <Border CornerRadius="100" Grid.Row="4" Grid.Column="6" Background="Red" Margin="10,10,10,10" Visibility="{Binding IsRedForPeopleVisible}"/>
            <Border CornerRadius="100" Grid.Row="4" Grid.Column="7" Background="Green" Margin="10,10,10,10" Visibility="{Binding IsGreenForPeopleVisible}"/>

            <Button Grid.Column="10" Grid.Row="1" Background="DimGray" Margin="10" Click="Button_Click_S0">
                <TextBlock Text="S1" Foreground="White" FontSize="30"></TextBlock>
            </Button>
            <Button Grid.Column="10" Grid.Row="2" Background="DimGray" Margin="10,10,10,10" Click="Button_Click_S1">
                <TextBlock Text="S2" Foreground="White" FontSize="30"></TextBlock>
            </Button>
            <Button Grid.Column="10" Grid.Row="3" Background="DimGray" Margin="10,10,10,10" Click="Button_Click_S2">
                <TextBlock Text="S3" Foreground="White" FontSize="30"></TextBlock>
            </Button>
            <Button Grid.Column="10" Grid.Row="4" Background="DimGray" Margin="10,10,10,10" Click="Button_Click_S3">
                <TextBlock Text="S4" Foreground="White" FontSize="30"></TextBlock>
            </Button>

            <Button Grid.Column="10" Grid.Row="5" Background="DimGray" Margin="10" Click="Button_Click">
                <TextBlock Text="Red" Foreground="White" FontSize="30"></TextBlock>
            </Button>

            <Button Grid.Column="10" Grid.Row="6" Background="DimGray" Margin="10" Click="Button_Click_1">
